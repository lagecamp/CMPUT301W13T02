<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.ualberta.team2recipefinder"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="15" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_INTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="ca.ualberta.team2recipefinder.controller.RecipeFinderApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="ca.ualberta.team2recipefinder.views.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="ca.ualberta.team2recipefinder.views.MyKitchenActivity" >
        </activity>
        <activity android:name="ca.ualberta.team2recipefinder.views.AddEditIngredientActivity" >
        </activity>
        <activity
            android:name="ca.ualberta.team2recipefinder.views.EditRecipeActivity"
            android:label="@string/title_activity_edit_recipe" >
        </activity>
        <activity android:name="ca.ualberta.team2recipefinder.views.ViewRecipeActivity" >
        </activity>
        <activity
            android:name="ca.ualberta.team2recipefinder.views.AddEditCommentsActivity"
            android:label="@string/title_activity_add_edit_comments" >
        </activity>
		<activity android:name="ca.ualberta.team2recipefinder.views.ShareRecipeActivity" >
		</activity>
		<activity android:name="ca.ualberta.team2recipefinder.views.RecipeGalleryActivity" >
		</activity>
    </application>

</manifest>